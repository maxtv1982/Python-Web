FROM python:3.9
#копируем нашу папку с приложением в рабочую директорию app, откуда будут выполнятся команды внутри контейнера
COPY ./app /app
# Запустить команду внутри образа, установка зависимостей.
RUN pip install -r /app/requirements.txt
# Выполнить команду внутри контейнера
CMD [ "python", "/app/http_server.py" ]